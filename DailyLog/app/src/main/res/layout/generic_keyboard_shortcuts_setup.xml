<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/genericShortcutLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategorySettingsActivity">

    <TextView
        android:id="@+id/shortcutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shortcutsTitle"
        app:layout_constraintBottom_toTopOf="@id/shortcutDescription"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="24sp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/shortcutDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shortcutsDescription"
        app:layout_constraintBottom_toTopOf="@id/shortcutList"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

    <LinearLayout
        android:id="@+id/shortcutList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addShortcutInfo"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addShortcutInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/labelInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/textview_border"
            android:hint="@string/addALabel"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="5dp"
            android:singleLine="true"
            android:theme="@style/styledText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textInput"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="really long text" />

        <EditText
            android:id="@+id/textInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/textview_border"
            android:hint="@string/addText"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="5dp"
            android:singleLine="true"
            android:theme="@style/styledText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cursorInput"
            app:layout_constraintStart_toEndOf="@+id/labelInput"
            tools:text="really long text" />

        <EditText
            android:id="@+id/cursorInput"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/textview_border"
            android:hint="@string/addCursor"
            android:importantForAutofill="no"
            android:inputType="number"
            android:padding="5dp"
            android:singleLine="true"
            android:theme="@style/styledText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnSaveShortcut"
            app:layout_constraintStart_toEndOf="@+id/textInput"
            tools:text="1200" />

        <ImageButton
            android:id="@+id/btnSaveShortcut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/save"
            android:src="@drawable/ic_save_24px"
            app:layout_constraintBottom_toBottomOf="@+id/cursorInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cursorInput"
            app:layout_constraintTop_toTopOf="@+id/cursorInput" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>