<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/addToLogView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".log.AddToLogView">

    <ScrollView
        android:id="@+id/addToLogScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/shortcutTray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
            <EditText
                android:id="@+id/todayLog"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:hint="@string/write_something_to_save"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:theme="@style/styledText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
    </ScrollView>

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:alpha="0.4"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:contentDescription="@string/settings"
        android:src="@drawable/ic_settings_24px"
        app:layout_constraintBottom_toTopOf="@id/btnDate"
        app:layout_constraintEnd_toEndOf="@id/addToLogScrollView"
         />

    <ImageButton
        android:id="@+id/btnDate"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/refresh"
        android:alpha="0.4"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_today_black_48dp"
        app:layout_constraintBottom_toTopOf="@id/btnSave"
        app:layout_constraintEnd_toEndOf="@id/addToLogScrollView"
        />

    <ImageButton
        android:id="@+id/btnClear"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:alpha="0.4"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:contentDescription="@string/clear"
        android:src="@drawable/ic_delete_outline_black_48dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/btnSave"
        app:layout_constraintEnd_toEndOf="@id/addToLogScrollView" />

    <ImageButton
        android:id="@+id/btnSave"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:alpha="0.4"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:contentDescription="@string/save"
        android:src="@drawable/ic_save_black_48dp"
        app:layout_constraintBottom_toBottomOf="@id/addToLogScrollView"
        app:layout_constraintEnd_toEndOf="@id/addToLogScrollView" />

    <GridView
        android:id="@+id/shortcutTray"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:numColumns="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addToLogScrollView" />
</androidx.constraintlayout.widget.ConstraintLayout>

